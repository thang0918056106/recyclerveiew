<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/imgHinh"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/txtTen"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:textColor="#8A7AFA"
        android:text="Tên Trà Sữa"
        android:layout_toRightOf="@+id/imgHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtChitiet"
        android:text="Chi Tiết"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imgHinh"
        android:layout_below="@+id/txtTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtGia"
        android:text="Giá"
        android:textSize="15sp"
        android:layout_toRightOf="@id/imgHinh"
        android:layout_below="@+id/txtChitiet"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>